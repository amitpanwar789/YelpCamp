<% layout('layouts/boilerplate') %>
    <div class="row ">

        <form action="/campgrounds/<%=campground.id%>?_method=PUT" method="post" novalidate class="needs-validation"
            enctype="multipart/form-data">
            <div class="col-6 offset-3">
                <h1 class="text-center">Update Campground</h1>
                <div class="form-group">
                    <label class="form-label" for="title">Campground Name</label>
                    <input class="form-control" type="text" name="campground[title]" id="title"
                        value="<%= campground.title %>" required>
                </div>
                <div class="form-group">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location"
                        value="<%= campground.location %>" required>
                </div>
                <div class="form-group">
                    <label class="form-label" for="image">Image</label>
                    <input class="form-control" type="file" name="image" id="image"  multiple>

                </div>
                <div class="form-group mb-2">
                    <label class="form-label" for="price">Price</label>


                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <div class="input-group-text">Rs</div>
                        </div>
                        <input type="number" class="form-control" id="price" name="campground[price]"
                            value="<%= campground.price %>" min="0" required>
                    </div>

                </div>



                <div class=" form-group">
                    <label class="form-label" for="description">More About Campground</label>
                    <textarea class="form-control" name="campground[description]" id="description" cols="30"
                        rows="4"><%= campground.description%></textarea>
                </div>
                <div class="mb-3">
                    <% campground.image.forEach(function(img, i) { %>
                        
                            <img src="<%=img.thumbnail%>" class="img-thumbnail" style="height: 200px; width:200px" alt="">
                            <div class="form-check-inline">
                                <input type="checkbox" id="image-<%=i%>" name="deleteImages[]"
                                    value="<%=img.filename%>">
                            </div>
                            <label for="image-<%=i%>">Delete?</label>
                            <% })%>
                        
                </div>
                <div>
                    <button class=" btn text-light  btn-info my-2 ">Update Campground</button>
                    <a class="btn btn-primary" href="/campgrounds/<%= campground._id%>">Back To Campground</a>
                </div>
            </div>
        </form>

    </div>