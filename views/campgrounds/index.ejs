<% layout('layouts/boilerplate')%>
    <h1>All Campgrounds</h1>
    <div id="map" style="width:100%; height:400px"></div>

    <% for(let camp of campground){%>
        <div class="card mb-4 ">
            <div class="row">
                <div class="col-4">
                    <% if(camp.image.length){ %>
                        <img src="<%= camp.image[0].URL %> " class="card-img-top my-2" style="height: 400px; object-fit: cover;" alt="...">
                        <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body ">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <h6 class="card-text ">Location:
                            <%= camp.location %>
                        </h6>
                        <a href="/campgrounds/<%= camp.id %> " class="btn btn-primary mb-2">view</a>
                    </div>
                </div>
            </div>
        </div>


        <% } %>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
        const campgrounds = {features: <%-JSON.stringify(campground)%>};
    </script>
    <script src="/javascript/clusterMap.js"></script>